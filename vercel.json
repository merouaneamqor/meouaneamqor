{
    "builds": [
      {
        "src": "nuxt.config.ts",
        "use": "@nuxtjs/vercel-builder",
        "config": {
          "serverFiles": ["server/**"]
        }
      }
    ],
    "routes": [
      {
        "src": "/.*",
        "dest": "dist/server/index.mjs"
      }
    ],
    "build": {
      "env": {
        "PNPM_FLAGS": "--shamefully-hoist"
      }
    }
  }